@using ValidHabit.Application.DTOs
@using ValidHabit.Application.DTOs.Authorization
@model UserLoginDto
@{
    ViewData["Title"] = "Log in";
}

<h1>@ViewData["Title"]</h1>
<div class="container text-center">
    <div class="row d-flex justify-content-center">
        <div class="col-md-6">
            <section>
                <form asp-action="Login" asp-controller="Account" method="post">
                    <h2>Use a local account to log in.</h2>
                    <hr />
                    <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                    <div class="form-floating mb-3">
                        <input asp-for="Username" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                        <label asp-for="Username" class="form-label">Email or Username</label>
                        <span asp-validation-for="Username" class="text-danger"></span>
                    </div>
                    <div class="form-floating mb-3">
                        <input asp-for="Password" type="password" class="form-control" autocomplete="password" aria-required="true" placeholder="Password" />
                        <label asp-for="Password" class="form-label">Password</label>
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div>
                        <button id="login-submit" type="submit" class="big-btn w-100">Log in</button>
                    </div>
                    <div>
                        <p>
                            <a id="forgot-password" asp-action="ForgotPassword" asp-controller="Account" method="get">Forgot Password</a>
                        </p>
                        <p>
                            <a class="back-link" asp-action="Register" asp-controller="Account" method="get">Register as a new user</a>
                        </p>
                    </div>
                </form>
            </section>
        </div>

    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
